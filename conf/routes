# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /			controllers.Application.index()
GET     /whatIsMyIPAddress	controllers.Application.whatIsMyIPAddress()
#GET	/feedUIEvent		    controllers.Application.feedUIEvent()
POST	/feedUIEvent		controllers.Application.feedUIEvent()
GET	/r0Stream		controllers.SSE.r0Stream()
GET	/clientHitCount		controllers.Statistics.clientHitCount()
GET	/httpHitCount		controllers.Statistics.httpHitCount()
GET	/clientResponseTimes	controllers.Statistics.clientResponseTimes()
GET	/httpResponseTimes	controllers.Statistics.httpResponseTimes()

GET	/elapsedTimeStats controllers.Statistics.getElapsedTimeStatistics()
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file		controllers.Assets.at(path="/public", file)

# For date streaming test
#GET	/clock			controllers.ClockTutorial.liveClock()
